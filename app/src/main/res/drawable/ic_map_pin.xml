<!--
    Clean teardrop map pin.
    Viewport 24 × 36. Circle head centred at (12, 12), r=12. Tip at (12, 36).
    Tangent breakaway at y=18 → x = 12 ± 12·sin(60°) = 12 ± 10.392

    Shape: large-arc (top semicircle + sides of ball) then two quads to the tip.
-->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="36dp"
    android:viewportWidth="24"
    android:viewportHeight="36">

    <!-- Teardrop body (iOS red #FF3B30) -->
    <path
        android:fillColor="#FF3B30"
        android:pathData="M 22.392,18 A 12,12 0 1 0 1.608,18 Q 0,28 12,36 Q 24,28 22.392,18 Z" />

    <!-- Highlight glint: small white oval in upper-left of the ball -->
    <path
        android:fillColor="#44FFFFFF"
        android:pathData="M 9,6 C 7,6 6,7.5 6,9 C 6,10.5 7,12 9,12 C 11,12 12,10.5 12,9 C 12,7.5 11,6 9,6 Z" />

</vector>
